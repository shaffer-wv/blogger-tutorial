<h1><%= @single_article.title %></h1>

<p>
	Tags:
	<% @single_article.tags.each do |tag| %>
		<%= link_to tag.name, tag_path(tag) %>
	<% end %>
</p>
<p>
	<% if @single_article.image.exists? %>
		<%= image_tag @single_article.image.url %>
	<% end %>	
	</p>
<p>
	<%= @single_article.body %>
</p>

<br>
<br>
<%= link_to "edit", edit_article_path(@single_article) %>
<br>
<%= link_to "delete", article_path(@single_article), method: :delete, confirm: "Really delete the article?"
 %>
 <br>
<br>
<h3>Comments (<%= @single_article.comments.size %>)</h3>

<%= render partial: 'articles/comment', collection: @single_article.comments %>
<%= render partial: 'comments/form' %>
<br>
<br>
<div><%= link_to "<< Back to Articles List", articles_path %></div>
